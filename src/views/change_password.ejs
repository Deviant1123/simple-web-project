<section class="card">
  <h1><%= title %></h1>
  <form action="<%= (currentUser && currentUser.is_admin) ? '/admin/change-password' : '/user/change-password' %>" method="post">
    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
    <label>Старый пароль
      <input name="oldPassword" type="password">
    </label>
    <label>Новый пароль
      <input name="newPassword" type="password" required>
    </label>
    <label>Подтверждение пароля
      <input name="confirmPassword" type="password" required>
    </label>
    <% if (typeof showPolicyHint !== 'undefined' ? showPolicyHint : (currentUser && currentUser.enforce_policy)) { %>
    <p class="hint">Требования: латиница, кириллица и цифры.</p>
    <% } %>
    <button type="submit">Сохранить</button>
  </form>
</section>


